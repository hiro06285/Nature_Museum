<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>投稿一覧</h3>
      <%= attachment_image_tag @post_image, :image %>
      <h6>説明</h6>
      <%= @post_image.body %>
      <h6>ユーザーネーム</h6>
      <%= @post_image.user.name %>
      <h6>投稿日時</h6>
      <%= @post_image.created_at.strftime('%Y/%m/%d') %>
    </div>
  </div>
</div>