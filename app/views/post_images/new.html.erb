<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>画像投稿フォーム</h3>
      <%= form_with model: @post_image, local:true do |f| %>
　      <h4>画像</h4>
　      <%= f.attachment_field :image %>
        <h4>説明文</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>    
</div>