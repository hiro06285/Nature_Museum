<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>投稿一覧</h3>
      <% @post_images.each do |post_image| %>
      <div>
        <%= attachment_image_tag post_image, :image %>
        <p>投稿ユーザー画像：<%= image_tag('noimage.jpg') %></p>
        <p>説明：<%= post_image.body %></p>
        <p>ユーザーネーム：<%= post_image.user.name %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>