<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>投稿一覧</h3>
    </div>
  </div>
  <div class="row">
    <% @post_image.each do |post_image| %>
      <div class="col-md-4 mb-4">
        <%= link_to post_image_path(post_image.id) do %>
          <%= attachment_image_tag post_image, :image %>
        <% end %>
        <h6>タイトル</h6>
        <%= post_image.name %>
        <h6>説明</h6>
        <%= post_image.body %>
        <h6>投稿ユーザー画像</h6>
        <%= image_tag('noimage.jpg') %>
        <h6>ユーザーネーム</h6>
        <%= post_image.user.name %>
        <%= link_to "#{post_image.post_image_comments.count} コメント", post_image_path(post_image.id) %>
      </div>
    <% end %>
  </div>
</div>