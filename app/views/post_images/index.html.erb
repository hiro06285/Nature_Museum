<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>投稿一覧</h3>
      <% @post_image.each do |post_image| %>
      <div>
        <%= link_to post_image_path(post_image.id) do %>
          <%= attachment_image_tag post_image, :image %>
        <% end %>
        <h6>説明</h6>
        <%= post_image.body %>
        <h6>投稿ユーザー画像</h6>
        <%= image_tag('noimage.jpg') %>
        <h6>ユーザーネーム</h6>
        <%= post_image.user.name %>
      </div>
      <% end %>
    </div>
  </div>
</div>