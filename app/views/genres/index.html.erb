<% if @search_genres %>
  <% render partial: 'genres/genre', collection: @search_genres %>
<% else %>
  <% render partial: 'genres/genre', collection: @genres %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル一覧</h2>
      <%= form_with model: @genre, url: genres_path, local: true do |f| %>
        <h6>ジャンル名</h6>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% (@search_genres.presence || @genres).each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>