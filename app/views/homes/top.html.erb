<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>Nature Museum</h3>
    </div>
    <div class="col-md-8">
      <h5>新着画像</h5>
    </div>
  </div>
  <div class="row">
    <% @post_image.each do |image| %>
    <div class="col-lg-3 col-md-6 mb-4 py-4">
      <%= link_to post_image_path(image) do %>
        <%= attachment_image_tag image, :image %><br>
      <% end %>
      <%= image.name %>
    </div>
    <% end %>
  </div><div class="row">
    <div class="col-md-3 offset-md-9">
      <%= link_to 'すべての画像を見る＞', post_images_path %>
    </div>
  </div>
</div>