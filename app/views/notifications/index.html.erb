<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>通知一覧</h3>
      <%= link_to notifications_destroy_all_path, method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7 style="color: black;">全削除</h7>
      <% end %>
      <hr>
      <% if @notifications.exists? %>
        <div class="users-index">
          <%= render @notifications %>
        </div>
      <% else %>
        <p>通知はありません</p>
      <% end %>
    </div>
  </div>
</div>